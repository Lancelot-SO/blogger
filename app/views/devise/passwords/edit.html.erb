<div class="user_holder">
  <h2>Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :password, "New password (6 characters minimum)", class:'user_field' %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'user_input' %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class:'user_field' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:'user_input'%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Change my password", class:'user_input' %>
    </div>
  <% end %>
  <div class="user_setting">
    <%= render "devise/shared/links" %>
  </div>
</div>